<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout6"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#191919"
    tools:context=".HealingFragment" >

    <SeekBar
        android:id="@+id/seekHealingRadius"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:max="151"
        android:min="1"
        android:progress="75"
        android:progressBackgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tHealingRadius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tHealingRadius"
        android:textColor="@color/color_for_buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekHealingRadius" />

    <SeekBar
        android:id="@+id/seekHealingStrength"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:max="101"
        android:min="1"
        android:progress="50"
        android:progressBackgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tHealingRadius" />

    <TextView
        android:id="@+id/tHealingStrength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tHealingStrength"
        android:textColor="@color/color_for_buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekHealingStrength" />
</androidx.constraintlayout.widget.ConstraintLayout>